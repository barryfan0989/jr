# 演唱會通知助手 - 環境配置

# Flask 配置
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production

# API 配置
API_HOST=0.0.0.0
API_PORT=5000
API_CORS_ORIGINS=*

# 數據庫配置
DATABASE_PATH=./data
USERS_FILE=./data/users.json
CONCERTS_FILE=./data/concerts.json
FOLLOWS_FILE=./data/follows.json
REMINDERS_FILE=./data/reminders.json

# 爬蟲配置
CRAWLER_TIMEOUT=30
CRAWLER_RETRY_COUNT=3
CRAWLER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# 前端配置
REACT_NATIVE_API_BASE_URL=http://localhost:5000/api

# 郵件配置 (未來用於提醒)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# 日誌配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
